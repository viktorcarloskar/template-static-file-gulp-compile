<div class="resume part">
  <div class="header-container">
    <h3 class="center swirl">Resumé summary</h3>
  </div>
  <div class="positions">
    {{#each content.positions}}
        <article class="position">
          <div class="image">
            {{rightImageTag this.image}}
          </div>
          <div class="text">
            <h4>{{this.title}}</h4>
            <div>{{this.text}}</div>
          </div>
        </article>
    {{/each}}
  </div>
  <div class="header-container">
    <h6 class="center">Want to know more? Don't fear to look me up on <a href="https://se.linkedin.com/in/viktorcarloskar" title="Viktors LinkedIn">LinkedIn</a>, <a href="#contact">contact me</a> or <a href="http://vigu.se/resume.pdf">download my resumé!</a></h6>
  </div>
</div>
<div class="projects part">
  <div class="header-container">
    <h1 class="center swirl green">My stories</h1>
  </div>
  {{#each content.projects}}
      <article class="post">
        <h1>{{this.title}}</h1>
        <div class="post-body">
          {{{this.body}}}
        </div>
      </article>
  {{/each}}
</div>
